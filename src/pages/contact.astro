---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';
import { Constants } from '~/utils/cta';

const { PHONE_NUMBER, EMAIL } = Constants;

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let's Connect!" />

  <ContactUs
    id="form"
    title="Drop us a message today!"
    subtitle="Untuk jawaban yang lebih cepat, coba lihat bagian FAQ kami terlebih dahulu. Mungkin Anda bisa menemukan solusi yang dicari di sana! Jika tidak, tim dukungan kami siap membantu Anda."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Nama',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Pesan',
    }}
    disclaimer={{
      label:
        'Dengan mengirimkan formulir kontak ini, Anda mengakui dan menyetujui pengumpulan informasi pribadi Anda.',
    }}
    description="Tim dukungan kami biasanya merespons dalam waktu 24 jam kerja."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Kami siap membantu Anda!"
    items={[
      {
        title: 'Phone',
        description: PHONE_NUMBER,
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: EMAIL,
        icon: 'tabler:mail',
      },
      {
        title: 'Location',
        description: 'Jl. Pluit Sakti Raya No.No.31 A 2, RT.2/RW.6, Pluit, Kec. Penjaringan, Jkt Utara, Daerah Khusus Ibukota Jakarta 14450',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
